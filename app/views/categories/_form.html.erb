<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
  <div class="notification is-danger">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :name, :class=>"label" %>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
            <%= form.text_field :name, :class=>"input is-large" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :description, :class=>"label" %>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
            <%= form.text_area :description, :class=>"textarea is-info is-medium" %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label for="photo">Imagen:</label>
    </div>
    <div class="field-body">
      <div class="field">
        <p class="control">
            <% 
            if category.image.attached?
            %>
            <div class="categoryImage" style="background-image: url(<%= url_for(category.image) %>);"></div>
            <% 
            end
            %>
            <div class="field">
              <div class="file is-info has-name">
                <label class="file-label">
                  <%= form.file_field :image, multiple: false, direct_upload: true %>
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Imagen...
                    </span>
                  </span>
                </label>
              </div>
            </div>
        </p>
      </div>
    </div>
  </div>

  <div class="buttons has-addons is-right">
    <%= form.submit 'Guardar', :class=>"button is-primary is-right is-large" %>
  </div>
<% end %>
